{{> pageheader}}

<div class="container center">
    <h1>{{name}}</h1>
    <hr>
</div>

<div class="container">
    <p>Type: {{typeName}}</p>
    <p>DOB: {{dob}}</p>
    <p>Gender: {{gender}}</p>
</div>

<div class="button-container">
    <a href="/" class="my-button">
        <h2><i class="fas fa-home"></i>Back</h2>
    </a>
</div>

<div class="container center-this hide" id="delete-container">
    <h2 class="center">
        Are you sure you want to delete this pet?
    </h2>

    <div class="button-container center-this">
        <button id="confirm-option" class="my-button">
            <h2><i class="fas fa-heart-broken"></i> Confirm</h2>
        </button>
        <button id="cancel-option" class="my-button">
            <h2>
                <i class="fas fa-window-close"></i> Cancel
            </h2>
        </button>
    </div>
</div>

<div class="button-container">
    <button id="remove-pet" class="my-button">
        <h2><i class="fas fa-eye-slash"></i> Remove</h2>
    </button>
</div>

{{> jquery}}
<script src="/js/petdetails.js"></script>
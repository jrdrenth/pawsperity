{{> pageheader}}

<div class="container center">
  <div class="post card">
    <div class="post-card-header">
      <h2>Create New Todo</h2>
    </div>
    <form id="new-todo-form" class="card-body">
      <div class="input-container">
        <label class="form-label" for="todo-name">Title:</label>
        <input type="text" name="todo-name" class="form-input" />
      </div>
      <div class="input-container">
        <label class="form-label" for="todo-description">Description:</label>
        <textarea name="todo-description" class="form-input"></textarea>
      </div>

      <button id="new-todo-button" type="button" class="btn submit-button">

        <h2><i class="fas fa-pencil-alt fa-md"></i>Create</h2>

      </button>
    </form>
  </div>
</div>
<script src="/js/newTodo.js"></script>
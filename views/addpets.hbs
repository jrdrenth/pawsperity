{{> pageheader}}

<div class="container center">
    <div class="card">
        <form class="form">
            <label for="pet-name">Pet Name:</label><br>
            <input type="text">

            <div class="break"></div>

            <label for="pet-dob">DOB:</label><br>
            <input type="date">

            <div class="break"></div>

            <label for="gender">Gender:</label><br>
            <select name="gender" id="add-gender">
                <option value="male">Male</option>
                <option value="female">Female</option>
                <option value="other">Other</option>
            </select>

            <div class="break"></div>

            <label for="pettype">Pet Type:</label><br>
            <select name="pettype" id="pet-type">
                {{#each types}}
                <option value="{{this.name}}">{{this.name}}</option>
                {{/each}}
            </select>

            <div class="break"></div>
        </form>

        <a href="#" class="my-button size-up"><i class="fas fa-check"></i>&nbsp;Add Now</a>
        <a href="/" class="my-button size-up"><i class="fas fa-times"></i>&nbsp;Cancel</a>

        <div class="break"></div>
    </div>
</div>
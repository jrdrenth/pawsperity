{{> pageheader}}

  <div class="todo-button flex-row justify-center">
    <a href="/todo">âž• New Todo</a>
  </div>

<div class = "container">  
  {{#each todosNotCompleted}}    
  <a href="/todo/{{id}}">  

  <div class="card center-this">
    <div class="card-header flex-row justify-space-between">
      <div>
        <h1>{{name}}</h1>       
        <input class="todoCB" type="checkbox"/>
        {{!-- todo {{User.username}} on {{format_date createdAt}} --}}
      </div>
    </div>
    <div class="card-body">
      {{body}}
    </div>
  </div>
  </a>

  <br>
  {{/each}}  

  {{#each todosCompleted}}    
  <a href="/todo/{{id}}">  

  <div class="card center-this">
    <div class="card-header flex-row justify-space-between">
      <div>
        <h1>{{name}}</h1>
        <input class="todoCB" type="checkbox" checked/>
        {{!-- todo {{User.username}} on {{format_date createdAt}} --}}
      </div>
    </div>
    <div class="card-body">
      {{body}}
    </div>
  </div>
  </a>

  <br>
  {{/each}}  
</div>



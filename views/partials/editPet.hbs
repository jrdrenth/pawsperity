{{!-- EDIT PET --}}
<div class="container" id="edit-popup">
    <h1 class="center">--- New Edit Below ---</h1>
    <div class="break"></div>
    <form>
        <div class="label-design">
            <label for="name">Name:</label>
            <input type="text" name="name" placeholder="{{name}}">
        </div>
        <div class="label-design">
            <label for="dob">DOB:</label>
            <input type="date" name="dob" value="{{dob}}">
        </div>
        <div class="label-design">
            <label for="gender">Gender:</label>
            <select name="gender" id="add-gender">
                <option value="male">Male</option>
                <option value="female">Female</option>
                <option value="other">other</option>
            </select>
        </div>
        <div class="label-design">
            <label for="pettype">Pet Type:</label>
            <select name="pet-type" id="pet-type">
                {{#each pettypes}}
                <option value="{{this.id}}">{{this.name}}</option>
                {{/each}}
            </select>
        </div>
        <div class="button-container">
            <button class="my-button button" id="save-edits"><i class="fas fa-check"></i> Save Edits</button>
            <button class="my-button button" id="cancel-edits"><i class="fas fa-times"></i> Cancel</button>
        </div>
    </form>
</div>
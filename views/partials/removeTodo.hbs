{{!-- REMOVE TODO --}}
<div class="popup-wrapper">
    <div class="container center-this hide" id="delete-container" data-id="{{todo.id}}">
        <h2 class="center">
            Remove {{name}} from your todo list?
        </h2>

        <div class="button-container center-this">
            <button type="button" id="confirm-option" class="my-button">
                <h2><i class="fas fa-heart-broken"></i> Confirm</h2>
            </button>
            <button id="cancel-option" class="my-button">
                <h2>
                  <i class="fas fa-window-close"></i> Cancel
                </h2>
            </button>
        </div>
    </div>
</div>

{{!-- Remove todo prompt initializer --}}
<div class="button-container">
    <button id="remove-todo" class="my-button">
        <h2><i class="fas fa-eye-slash"></i> Remove</h2>
    </button>
</div>
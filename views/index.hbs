{{> pageheader}}

{{#each pets}}
<div class="container center">

    <div class="card">
        <a href="/petdetails">
            <div class="card-header">
                <i class="fas fa-dog fa-3x"></i>
            </div>
            <div class="card-title">
                <h2>{{this.name}}</h2>
            </div>
            <div class="card-body">
                <p>{{this.dob}}</p>
            </div>
            <div class="card-footer">
                <p>{{this.gender}}</p>
            </div>
        </a>
    </div>

</div>
{{/each}}


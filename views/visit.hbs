{{> pageheader}}

<div class="container center">
    <button class="visit-button" id="visit-today">
        <h1>TODAY <i class="fas fa-chevron-down"></i></h1>
        <br>
        <div class="hide">
            <ul>
                {{#each todayVisits}}
                <li>
                    <div class="card center-this">
                        <div class="card-title">
                            {{dataValues.date_time}}
                        </div>
                        <div class="card-body">
                            {{dataValues.title}}
                        </div>
                        <div class="card-footer">
                            {{dataValues.notes}}
                        </div>
                    </div>
                    <br>
                </li>
                {{/each}}
            </ul>
        </div>
    </button>
</div>


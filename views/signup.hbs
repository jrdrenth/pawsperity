<div id="login-form" class="container">

    {{> mainTitle}}

    <div id="login-card-container" class="center">
        <div class="card">
            <h2 class="card-title post-card-header">Sign Up</h2>
            <div class="card-body">
                <form id="signup-form">
                    <label for="name" class="label-align">NAME:</label><br>
                    <input type="text" id="name-signup" placeholder="name"><br><br>
                    <label for="email" class="label-align">EMAIL:</label><br>
                    <input type="email" id="email-signup" placeholder="email"><br><br>
                    <label for="password" class="label-align">PASSWORD:</label><br>
                    <input type="password" id="password-signup" placeholder="password must be 8 characters or longer"><br>
                    <div class="break"></div>
                    <button type="submit" class="submit-button">Submit</button>
                </form>
            </div>
            <div class="card-footer">
                <a href="/login">
                    <p>Login Into Existing Account!</p>
                </a>
            </div>
        </div>
    </div>

</div>

{{!-- JS --}}
<script src="./js/signup.js"></script>